<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
https://raw.githubusercontent.com/Gethe/wow-ui-source/refs/heads/live/Interface/AddOns/Blizzard_SharedXML/UI.xsd">
	<CheckButton name="MacroToolkitButtonTemplate" inherits="SelectorButtonTemplate" virtual="true">
		<Layers>
			<Layer level="OVERLAY">
				<Texture name="$parentUnbound" parentKey="Unbound" file="Interface\COMMON\VOICECHAT-MUTED">
					<Size x="32" y="32"/>
					<Anchors>
						<Anchor point="TOPLEFT" x ="2" y="-3"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<FontString name="$parentName" inherits="GameFontHighlightSmall" wordwrap="false" parentKey="Name">
					<Size x="36" y="10"/>
					<Anchors>
						<Anchor point="BOTTOM" relativePoint="BOTTOM" x="0" y="2"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad>
				self:RegisterForDrag("LeftButton")
			</OnLoad>
		</Scripts>
	</CheckButton>

</Ui>
